<div class="box">
	<div class="box-header">
		<h4 class="box-title">@Title</h4>
	</div>
	<div class="box-body">

		@foreach (var row in ProgressBars)
		{
			
			int columnScale = 12 / row.Length;
			string className = $"col-lg-{columnScale} col-12";
			
			<div class="row">
				@foreach (var column in row)
				{
					<div class=@(className)>
						@(column)
					</div>
				}
			</div>

		}

		@* <div class="row">
			<div class="col-lg-6 col-12">
				<ProgressBarCircle Title="Monthly" Value=30></ProgressBarCircle>
			</div>
			<div class="col-lg-6 col-12">
				<ProgressBarCircle Title="Yearly" Value=90></ProgressBarCircle>
			</div>
		</div> *@
	</div> 
</div>

@code {

	[Parameter]
	public RenderFragment[][] ProgressBars { get; set; } = null!;
	[Parameter]
	public string Title { get; set; } = null!;

}
